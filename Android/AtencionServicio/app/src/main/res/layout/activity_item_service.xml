<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvServiceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OS - 354140 - 2"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Juan Pérez"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: Av. Siempre Viva 123"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turno: Mañana"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSKU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU: 001234"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar servicio"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>