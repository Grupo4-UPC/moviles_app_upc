<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceTrackingViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Paso 1: Servicio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_step_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_service_icon_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_service"
                    app:tint="@color/blue_400" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_service_icon_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="#CCCCCC" />

            </RelativeLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#DEDEDE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Paso 1"
                        android:textColor="#2E2E2E"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Servicio"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Estado"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_status_view"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeightSmall"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/spinner_background_blue"
                    android:gravity="center"
                    android:text="Realizado"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Subestado"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sub_status_view"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeightSmall"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/spinner_background_blue"
                    android:gravity="center"
                    android:text="Todo Conforme"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Paso 2: Registro fotográfico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_step_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/line1"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#CCCCCC" />

                <ImageView
                    android:id="@+id/iv_photo_icon_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/line1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/blue_400" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_photo_icon_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="#CCCCCC" />

            </RelativeLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#DEDEDE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Paso 2"
                        android:textColor="#2E2E2E"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Fotos"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_view_photo_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Acá podrá visualizar las fotos"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_pictures"
                    style="@style/MySegmentedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue_400"
                    android:text="@string/btn_view_pictures"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Paso 3: Registro de datos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_step_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/line2"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#CCCCCC" />

                <ImageView
                    android:id="@+id/iv_register_icon_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/line2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/blue_400" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_register_icon_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="#CCCCCC" />

            </RelativeLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#DEDEDE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Paso 3"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Registro de datos"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_view_client_info_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Acá podrá ver los datos del cliente y observaciones del servicio"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_requirements"
                    style="@style/MySegmentedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue_400"
                    android:text="@string/btn_view_requirements"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>