<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for the MaterialButtonToggleGroup itself -->
    <style name="MySegmentedButtonToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleSelection">true</item> <!-- Ensure only one can be selected -->
        <item name="selectionRequired">true</item> <!-- Ensure one is always selected -->
        <item name="checkedButton">@id/btnToStart</item> <!-- Default selected button -->
    </style>

    <!-- Base style for buttons within the toggle group -->
    <style name="MySegmentedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item> <!-- If you don't want all caps text -->
        <item name="android:textSize">14sp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyRoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item> <!-- This makes it pill-shaped -->
    </style>
</resources>